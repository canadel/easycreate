%tr
  %td
    = domain.id
  %td
    = domain.domain
  %td
    = domain.dumbo_state
  %td
    - if domain.dumbo_binary_state
      = link_to "deactivate", domain_deactivate_dumbo_path(domain), :remote => true, :class => 'animated'
      |
      = link_to "choose template", domain_choose_template_path(domain)
    - else
      = link_to "activate Dumbo for this domain", domain_activate_dumbo_path(domain), :remote => true, :class => 'animated'
  %td
    = link_to "update domain details", domain_update_path(domain, :update_view => true), :remote => true, :class => 'animated'
