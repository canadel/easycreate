%h2 Change your password

= twitter_bootstrap_form_for(resource, |
                     :as   => resource_name, |
                     :url  => password_path(resource_name), :html => { :method => :put }) do |f|

  = f.inputs 'Forgot your password?' do
    = devise_error_messages!
    
    = f.hidden_field :reset_password_token

    = f.password_field :password, "New password"
    = f.password_field :password_confirmation, "Confirm new password"

    = f.actions do
      = f.submit 'Change my password'

= render :partial => "devise/shared/links"
